# Test typeclass and instance parsing and validation

import type_aliases as Types

module test::typecheck::typeclass_parse contains

  # Type class definition with type parameter
  define transparent Show as typeclass A of-kind Type0 where
    show of-type (Types::Function A String)
  end

  # Instance for Natural
  define transparent Show-Natural as instance Show Natural where
    show as function x Natural returns String value
      "nat"
    end
  end

  # Instance for Boolean
  define transparent Show-Boolean as instance Show Boolean where
    show as function x Boolean returns String value
      "bool"
    end
  end

  define transparent main as compute
    return tt
  end
end
