# Type-level computation via match (type-family-like behavior)

module test::typecheck::type_family contains
  define transparent HandlerType as
    function b Boolean returns Type0 value
      match b of-type Boolean as ignored returns Type0
        case Boolean::false as Natural
        case Boolean::true as String
      end
    end

  define transparent check-false as
    of-type (HandlerType false) Type0

  define transparent check-true as
    of-type (HandlerType true) Type0

  define transparent main as compute
    return tt
  end
end
