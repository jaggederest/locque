# Migrated from ../00_basics.lq

import prelude as P
import assert as A
import io as IO
import string as S
import prelude as P

module LBasics contains

  define transparent check-add as computation
    bind perform io (A.assert-eq-nat (P.add-nat 2 3) 5) as _ then
    return P.tt

  define transparent check-string as computation
    bind perform io (A.assert-eq-string "hi" "hi") as _ then
    return P.tt

  define transparent check-output as computation
    bind perform io (IO.print "Hello, test!") as _ then
    return P.tt

  define transparent check-string-length as computation
    bind perform io (A.assert-eq-nat (S.length "abcd") 4) as _ then
    return P.tt

  define transparent check-string-split-join as computation
    bind perform io (A.assert-eq-string (S.join-with "-" (S.split-on "-" "a-b-c")) "a-b-c") as _ then
    return P.tt

  define transparent check-split-spaces as computation
    bind perform io (A.assert-eq-string (S.join-with "-" (S.split-spaces " a  b c ")) "a-b-c") as _ then
    return P.tt

  define transparent main as computation
    bind check-add as _ then
    bind check-string as _ then
    bind check-string-length as _ then
    bind check-string-split-join as _ then
    bind check-split-spaces as _ then
    bind check-output as _ then
    return P.tt
end
