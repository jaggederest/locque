# Migrated from ../06_primitives.lq

import prelude as P
import assert as A
import comparison as C
import arithmetic as Ar
import list as L
import string as S

module test::prelude::primitives contains
  define transparent list-abc as
    P::cons String "a"
      (P::cons String "b"
        (P::cons String "c" (P::nil String)))

  define transparent taken-abc as
    L::take String 2 list-abc

  define transparent dropped-abc as
    L::drop String 1 list-abc

  define transparent test-comparison as compute
    sequence
      (A::assert-eq-string (P::if-bool String (C::lt-nat 1 2) "yes" "no") "yes")
      (A::assert-eq-string (P::if-bool String (C::gt-nat 2 1) "yes" "no") "yes")
      (A::assert-eq-string (P::if-bool String (C::le-nat 2 2) "yes" "no") "yes")
      (A::assert-eq-string (P::if-bool String (C::ge-nat 3 2) "yes" "no") "yes")
      (A::assert-eq-string (P::if-bool String (C::eq-nat 5 5) "yes" "no") "yes")
    end
  end

  define transparent test-arithmetic as compute
    sequence
      (A::assert-eq-nat (Ar::mul-nat 3 4) 12)
      (A::assert-eq-nat (Ar::mul-nat (Ar::mul-nat 2 5) 3) 30)
      (A::assert-eq-nat (Ar::div-nat 10 3) 3)
      (A::assert-eq-nat (Ar::mod-nat 10 3) 1)
      (A::assert-eq-nat (Ar::add-nat 5 10) 15)
      (A::assert-eq-nat (Ar::sub-nat 10 3) 7)
    end
  end

  define transparent test-list-ops as compute
    sequence
      (A::assert-eq-string (L::nth String 0 list-abc) "a")
      (A::assert-eq-string (L::nth String 1 list-abc) "b")
      (A::assert-eq-string (L::nth String 2 list-abc) "c")
      (A::assert-eq-nat (P::length-list String taken-abc) 2)
      (A::assert-eq-nat (P::length-list String dropped-abc) 2)
      (A::assert-eq-string (L::nth String 0 dropped-abc) "b")
    end
  end

  define transparent test-string-ops as compute
    sequence
      (A::assert-eq-string (S::substring 0 3 "hello") "hel")
      (A::assert-eq-string (S::substring 2 3 "hello") "llo")
      (A::assert-eq-string (S::character-string (S::char-at 1 "hello")) "e")
      (A::assert-eq-string (S::character-string (S::char-at 0 "hello")) "h")
      (A::assert-eq-string
        (P::if-bool String (S::string-contains "ell" "hello") "yes" "no")
        "yes")
      (A::assert-eq-string
        (P::if-bool String (S::string-contains "xyz" "hello") "yes" "no")
        "no")
      (A::assert-eq-string
        (P::if-bool String (S::string-starts-with "hel" "hello") "yes" "no")
        "yes")
      (A::assert-eq-string
        (P::if-bool String (S::string-starts-with "llo" "hello") "yes" "no")
        "no")
    end
  end

  define transparent main as compute
    sequence
      test-comparison
      test-arithmetic
      test-list-ops
      test-string-ops
    end
  end
end
