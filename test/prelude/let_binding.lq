# Migrated from ../05_let.lq

import prelude as P
import assert as A

module test::prelude::let_binding contains
  define transparent simple-let as
    let value x be 2 in
      let value y be 3 in
        P::add-nat x y
      end
    end

  define transparent multi-let as
    let value a be 1 in
      let value b be 2 in
        P::add-nat a b
      end
    end

  define transparent main as compute
    sequence
      (A::assert-eq-nat simple-let 5)
      (A::assert-eq-nat multi-let 3)
    end
  end
end
