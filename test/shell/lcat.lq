# Tests for lcat

import shell::lcat as Lcat
import file as File
import assert as A
import test::helpers as TH
import typeclass::equality as Eq
import string as S

open A exposing assert-eq end
open Eq exposing Equality end

module test::shell::lcat contains
  define transparent main as compute
    bind ignored from perform (File::write-file "test/tmp/lcat.txt" "lcat") then
      bind out from perform (TH::assert-single-output String "lcat" (Lcat::lcat "test/tmp/lcat.txt")) then
        perform (assert-eq String out "lcat")
      end
    end
  end
end
