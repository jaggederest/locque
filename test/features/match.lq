# Migrated from ../04_match.lq

import Prelude as P
import Assert as A

module MatchTests contains

  define transparent bool-match as computation
    bind _ <- perform io (A.assert-eq-string (if-bool (P.not false) "true-branch" "false-branch") "true-branch") then
    return P.tt

  define transparent list-match as computation
    bind _ <- perform io (A.assert-eq-string (P.match-list (P.cons "x" P.nil) (lambda () "empty") (lambda h -> (lambda t -> h))) "x") then
    return P.tt

  define transparent main as computation
    bind _ <- bool-match then
    bind _ <- list-match then
    return P.tt
end
