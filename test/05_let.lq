import prelude as P
import assert as A

module LLetTests contains

  define transparent simple-let as value
    let x as 2 in
    let y as 3 in
    P.add-nat x y

  define transparent multi-let as value
    let ((a 1) (b 2))
      P.add-nat a b

  define transparent main as computation
    bind perform io (A.assert-eq-nat simple-let 5) as _ then
    bind perform io (A.assert-eq-nat multi-let 3) as _ then
    return P.tt
end
