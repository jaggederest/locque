import Prelude as P
import Assert as A

module LetTests contains

  define transparent simple-let as value
    let x = 2 in
    let y = 3 in
    P.add-nat x y

  define transparent multi-let as value
    let ((a 1) (b 2))
      P.add-nat a b

  define transparent main as computation
    bind _ <- perform io (A.assert-eq-nat simple-let 5) then
    bind _ <- perform io (A.assert-eq-nat multi-let 3) then
    return P.tt
end
