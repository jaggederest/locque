# Test: Basic shell primitive functionality

import Shell as S
import Prelude as P
import Assert as A
import String as Str
import IO as IO

module ShellBasic contains

  define transparent test-echo as computation
    bind output <- perform io (S.shell "echo hello") then
    bind _ <- perform io (A.assert-eq-string (Str.trim output) "hello") then
    return P.tt

  define transparent main as computation
    perform io test-echo

end
