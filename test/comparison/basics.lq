# Comparison module smoke tests

import comparison as C
import assert as A

open A exposing assert-eq Equality end

module test::comparison::basics contains
  define transparent main as compute
    sequence
      (assert-eq Boolean (C::lt-nat 1 2) true)
      (assert-eq Boolean (C::lt-nat 2 1) false)
      (assert-eq Boolean (C::le-nat 2 2) true)
      (assert-eq Boolean (C::le-nat 3 2) false)
      (assert-eq Boolean (C::gt-nat 3 2) true)
      (assert-eq Boolean (C::gt-nat 2 3) false)
      (assert-eq Boolean (C::ge-nat 2 2) true)
      (assert-eq Boolean (C::ge-nat 1 2) false)
      (assert-eq Boolean (C::eq-nat 2 2) true)
      (assert-eq Boolean (C::eq-nat 2 3) false)
      (assert-eq Boolean (C::between 10 20 15) true)
      (assert-eq Boolean (C::between 10 20 10) true)
      (assert-eq Boolean (C::between 10 20 20) true)
      (assert-eq Boolean (C::between 10 20 5) false)
      (assert-eq Boolean (C::between 10 20 25) false)
      (assert-eq Boolean (C::between 10 10 10) true)
    end
  end
end
