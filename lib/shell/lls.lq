import file as File
import io as IO
import prelude as P
import string as Str

module shell::lls contains
  define transparent list-files as
    File::list-dir

  define transparent lls as
    function path String returns computation (List String) value
      P::tap (List String)
        (function files (List String) returns computation Unit value
          IO::print (Str::join-with "\n" files)
        end)
        (list-files path)
    end
end
